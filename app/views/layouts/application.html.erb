<!DOCTYPE html>
<html>
<head>
  <title>OneLifePayments</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <link href='http://fonts.googleapis.com/css?family=Lato:300,400,700' rel='stylesheet' type='text/css'>
  <%= tag :meta, :name => "stripe-key", :content => ENV['PUBLISHABLE_KEY'] %>
</head>
<body>
  <div class="nav-block">
    <div class="container">
      <div class="row">
        <div class="col-xs-10 col-sm-2">
          <a href="/">
           <%= image_tag("oL_logo.png", :class => "header-logo") %>
          </a>
        </div>
        <div class="col-xs-2 col-sm-10 nav-links">
          <div class="hidden-xs">
            <%= link_to("OUR STORY", about_path) %>
            <%= link_to("WHAT WE DO", our_work_path) %>
            <%= link_to("COMMUNITIES", communities_path) %>
            <%= link_to("GIVE", new_contribution_path) %>
            <%= link_to("CONTACT US", contact_path) %>
          </div>
        </div>
      </div>
    </div>
  </div>

	<p class="notice"><%= notice %></p>
	<p class="alert"><%= alert %></p>
	<%= yield %>
  <script>
    $.fn.scrollView = function () {
        return this.each(function () {
            $('html, body').animate({
                scrollTop: $(this).offset().top
            }, 1000);
        });
    }
  </script>
</body>
</html>
